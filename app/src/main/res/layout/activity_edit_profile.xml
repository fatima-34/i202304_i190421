<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EditProfile">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backarrow"
                android:layout_width="0dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:contentDescription="backarrow"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:src="@drawable/backarrow" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Edit Profile"
                android:layout_weight="4"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Save Changes"
                android:layout_weight="4"
                android:textSize="20dp"
                android:clickable="true"
                android:gravity="right"
                android:textColor="@color/orange"/>
        </LinearLayout>
        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_dynamic_neutral60"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            android:layout_weight="6"
            >
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15dp"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter name"
                android:text="Fatima Mustafa"
                android:singleLine="true"
                android:textSize="20dp"
                android:background="@drawable/roundcorner"
                >
            </EditText>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="15dp"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter email"
                android:text="i200564@nu.edu.pk"
                android:singleLine="true"
                android:textSize="20dp"
                android:background="@drawable/roundcorner"
                >
            </EditText>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textSize="15dp"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="03085733307"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter contact number"
                android:singleLine="true"
                android:textSize="20dp"
                android:background="@drawable/roundcorner"
                >
            </EditText>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textSize="15dp"
                android:textStyle="bold"
                >
            </TextView>
            <Spinner
                android:id="@+id/country"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="20dp"
                android:prompt="@string/SelectCountry"
                android:spinnerMode="dropdown"
                android:background="@drawable/roundcorner"
                >
            </Spinner>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="15dp"
                android:textStyle="bold">
            </TextView>
            <Spinner
                android:id="@+id/city"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="20dp"
                android:spinnerMode="dropdown"
                android:prompt="@string/SelectCity"
                android:background="@drawable/roundcorner"
                >
            </Spinner>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>